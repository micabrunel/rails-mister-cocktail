<div class="background-index">


<div class="container">
  <div class="d-flex justify-content-around flex-wrap">
  <% @cocktails.each do|cocktail| %>
    <div class="row">
      <div class="col-sm mb-4">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag cocktail.photo, height: 200, width: 150, crop: :fill %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            <p class="card-text">My Delicious cocktail is here for you, enjoy ðŸŽ‰Â </p>
          </div>
          <ul class="list-group list-group-flush">
            <% cocktail.doses.each do|dose| %>
            <li class="list-group-item"><%= dose.ingredient.name %></li>
            <% end %>
          </ul>
          <div class="card-body">
            <p class="card-link"><%= link_to "See recipe", cocktail_path(cocktail)%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    <%= link_to "Create a new cocktail", new_cocktail_path %>
  </button>
</div>
</div>


